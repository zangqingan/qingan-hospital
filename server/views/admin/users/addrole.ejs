<!DOCTYPE html>
<html>
  
  <head>
    <meta charset="UTF-8">
    <title>角色添加页面</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/static/css/font.css">
		<link rel="stylesheet" href="/static/css/weadmin.css">
    <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  
  <body>
    <div class="weadmin-body">
        <form class="layui-form" action="/admin/users/userlist2/adduser" method="POST">
            
            
          <div class="layui-form-item">
              <label for="username" class="layui-form-label">
                  <span class="we-red">*</span>角色名称
              </label>
              <div class="layui-input-inline">
                  <input type="text" id="rolename" name="rolename" 
                  autocomplete="off" value="" class="layui-input">
              </div>
          </div>
          <div class="layui-form-item">
              <label for="phone" class="layui-form-label">
                  <span class="we-red">*</span>角色描述
              </label>
              <div class="layui-input-inline">
                  <input type="text" value="" id="brief" name="brief" 
                  autocomplete="off" class="layui-input">
              </div>
          </div>
          <div class="layui-form-item">
              <label for="L_email" class="layui-form-label">
                  <span class="we-red">*</span>角色的权限
              </label>
              <div class="layui-input-block">
                  <div id="test1"></div>
              </div>
          </div>
          
          <div class="layui-form-item">
              <label for="L_repass" class="layui-form-label">
              </label>
              <button  class="layui-btn" lay-filter="add" lay-submit="">
                  添加
              </button>
              <!-- <button  class="layui-btn">
                    修改
            </button> -->
          </div>
      </form>
    </div>
		<script src="/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript">
    	layui.extend({
				admin: '{/}/static/js/admin'
            });
        //引入上传模块
	    layui.use(['transfer','form','layer','admin','upload','jquery'], function(){
	        var form = layui.form,
	      	admin = layui.admin,
	      	layer = layui.layer;
            var upload = layui.upload;
            var $ = layui.jquery;
            var transfer = layui.transfer;

          //监听提交
          form.on('submit(add)', function(data){
            console.log(data);
            var getData = transfer.getData('demo1'); 
            console.log(getData)
            let sendData = {
                rolename:data.field.rolename,
                brief:data.field.brief,
                authlist:getData
            }
           $.ajax({
               url:"/admin/roles/rolelist/addrole",
               method:"post",
               contentType: "application/json; charset=utf-8",
               data: JSON.stringify(sendData),
           }).then(function(res){
               console.log(res)
                layer.alert("增加成功", {icon: 6},function () {
                    // 获得frame索引
                    var index = parent.layer.getFrameIndex(window.name);
                    //关闭当前frame
                    parent.layer.close(index);
                    //将ifame的上一层进行刷新页面
                    window.parent.location.reload()
                });
           })
            
            return false;
          });


         
     
    //通过ajax获取数据后进行渲染

        $.ajax({
            url:"/admin/users/authlist/api/authlistAll",
            method:"get",

        }).then((res)=>{
            let data = res.data;
            let arr = []
            data.forEach(function(item,i){
                arr[i] =  {
                    "value": item.id, 
                    "title": item.authname, 
                    "disabled": "", 
                    "checked": ""
                }
            })
            //渲染
            transfer.render({
            elem: '#test1'  //绑定元素
            ,title:["所有权限",'拥有权限'],
            data: arr
            ,id: 'demo1' //定义索引
            });
        })
        
    })
    </script>
  </body>

</html>